\newcommand*{\timeframetimespan}[2]{\textbf{#1} - \textbf{#2}}
\newcommand*{\timeframetitle}[1]{\textbf{#1}}
\newcommand*{\timeframeplace}[1]{\textit{#1}}
\newcommand*{\timeframeplacelink}[2]{\href{#2}{\textit{#1}}}
\newcommand*{\timeframegrade}[2]{#1: #2}

\newcommand*{\timeframe}[5]{
  \begin{tabular}{p{3.5cm} p{10.5cm}}
    \timeframetimespan{#1}{#2} & \timeframetitle{#3} \\
                               & \timeframeplace{#4} \\[0.25em]
                               & #5 \\[0.75em]
  \end{tabular}
}

\newcommand*{\timeframeshort}[4]{
  \begin{tabular}{p{3.5cm} p{10.5cm}}
    \timeframetimespan{#1}{#2} & \timeframetitle{#3} \\
                               & \timeframeplace{#4} \\[0.75em]
  \end{tabular}
}

