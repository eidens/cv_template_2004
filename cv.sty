% two-column section for contact/misc information, simply implemented
% as a table
\newenvironment{cvinfosection}[2]{
  \begin{tabular}{
    @{\hspace{-0.9em}} % havent found a better way to left-align the
                       % info section with everything else
    l | l % both cvinfocolumns left aligned
}
    #1 & #2
  \end{tabular}
}

\newenvironment{cvinfo}[8]{
  {\renewcommand{\arraystretch}{1.2}
    \begin{tabular}{l l}
      {\bf #1} & #2 \\
      {\bf #3} & #4 \\
      {\bf #5} & #6 \\
      {\bf #7} & #8 \\
    \end{tabular}
  }
}

\newenvironment{cvinfoshort}[4]{
  {\renewcommand{\arraystretch}{1.2}
    \begin{tabular}{l l}
      {\bf #1} & #2 \\
      {\bf #3} & #4 \\
    \end{tabular}
  }
}

