% education history environment
% from / to / type / place / final grade
\newenvironment{education}[5]{
  \begin{tabbing}
    \hspace{3.5cm} \= \kill
    \textbf{#1} - \textbf{#2}
    \> \textbf{#3} \\
    \>\+ \textit{#4} \\[0.25em]
    #5
  \end{tabbing}
}

